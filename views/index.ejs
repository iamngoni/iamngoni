            <a name="blog"></a>
            <div class="col-md-12">
                <h3 class="font-weight-bold headings mx-3">Recent Blog Posts</h3>
                <% posts.forEach(post => { %>
                    <label for="date" class="text-white mx-3 mr-4">
                        <script>
                            function getDate(date){
                                var dateValue = new Date(date).getDate();
                                var monthValue = new Date(date).getMonth();
                                var yearValue = new Date(date).getFullYear();
                                return `${yearValue} - ${monthValue} - ${dateValue}`;
                            }
                            document.write(getDate("<%=post.date%>"));
                        </script>
                    </label>
                    <a href="#" class="blog-anchors"><%=post.title%></a>
                <% }); %>
                <% if(posts == 0){ %>
                    <p class="text-white mx-3">No recent posts ðŸ˜ž</p>
